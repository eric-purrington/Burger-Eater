<h1>Burgers</h1>

<h2>Burgers to devour</h2>

<ul>
    {{#each burgers}}
        {{#unless devoured}}
            <li>{{burger_name}}
                <button class="change-devoured" data-id="{{id}}" data-newdevoured="{{devoured}}">
		        {{#if devoured}}I'll have another{{else}}Devour That Burger{{/if}}
	            </button>
            </li>
        {{/unless}}
    {{/each}}
</ul>

<h2>Burgers devoured</h2>

<ul>
    {{#each burgers}}
        {{#if devoured}}
            <li>{{burger_name}}
                <button class="change-devoured" data-id="{{id}}" data-newdevoured="{{devoured}}">
		        {{#if devoured}}I'll have another{{else}}Devour That Burger{{/if}}
	            </button>
            </li>
        {{/if}}
    {{/each}}
</ul>

<h2>Add a burger to devour</h2>

<form class = "create-form">
    <div class = "form-group">
        <label for = "burger_name">Burger Name:</label>
        <input type = "text" id = "burger_name" name = "name">
    </div>
    <button id = "createBurger" type = "submit">Add burger</button>
</form>